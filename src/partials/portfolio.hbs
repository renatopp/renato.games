<div class="rp-portfolio">

  <div class="uk-container">
    <h2 id="rp-portfolio">Portfolio</h2>

    <div class="grid">
      {{#each data.portfolio}}
      <div class="grid-item {{this.classes}}">
        <a href="{{this.href}}" class="uk-inline" target="_blank">
          <img src="assets/imgs/portfolio/{{this.image}}" alt="">
          <div class="uk-overlay uk-overlay-primary uk-position-bottom">
            <p>
              <b>{{this.label}}</b><br /><small>{{this.description}}</small>
            </p>
          </div>
        </a>
        <div class="shadow"></div>
      </div>
      {{/each}}
    </div>

